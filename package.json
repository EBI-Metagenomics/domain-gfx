{
  "name": "domain_gfx",
  "version": "0.0.1",
  "description": "Domain graphics drawing library",
  "main": "index.js",
  "dependencies": {
    "jsdom": "^9.9.1",
    "lodash-es": "^4.17.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-babili": "0.0.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2016": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "chalk": "^1.1.3",
    "codemirror": "^5.23.0",
    "eslint": "^3.14.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "flow-bin": "^0.38.0",
    "jest": "^18.1.0",
    "livereload": "^0.6.0",
    "lodash.debounce": "^4.0.8",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "watch": "^1.0.1"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ],
        "presets": [
          "stage-2"
        ]
      }
    }
  },
  "jest": {
    "verbose": true,
    "bail": true,
    "testRegex": ".*.test.js",
    "transformIgnorePatterns": []
  },
  "scripts": {
    "build": "node --harmony-async-await scripts/build.js",
    "build:demo": "node --harmony-async-await scripts/demo.js",
    "start": "node --harmony-async-await scripts/start.js",
    "test": "npm run test:lint && npm run test:flow && npm run test:jest",
    "test:lint": "eslint --color --ignore-path .gitignore \"./**/*.js\" --ignore-pattern demo",
    "test:flow": "flow check",
    "test:jest": "NODE_PATH=$NODE_PATH:./src node --harmony-async-await $(npm bin)/jest",
    "publish:demo": "npm run build:demo && git subtree push --prefix demo origin gh-pages"
  },
  "keywords": [
    "domain",
    "graphics"
  ],
  "license": "Apache-2.0",
  "author": "Aur√©lien Luciani <luciani@ebi.ac.uk> (https://github.com/aurel-l)"
}

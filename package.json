{
  "name": "domain-gfx",
  "version": "0.1.2",
  "description": "Domain graphics drawing library",
  "main": "dist/domain_gfx.es5.js",
  "jsnext": "src/index.js",
  "module": "src/index.js",
  "author": "Aur√©lien Luciani <luciani@ebi.ac.uk> (https://github.com/aurel-l)",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProteinsWebTeam/domain_gfx.git"
  },
  "dependencies": {
    "jsdom": "^9.11.0",
    "lodash-es": "^4.17.4"
  },
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-babili": "0.0.12",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-es2016": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "chalk": "^1.1.3",
    "codemirror": "^5.24.2",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "filesize": "^3.5.6",
    "flow-bin": "^0.41.0",
    "jest": "^19.0.2",
    "livereload": "^0.6.1",
    "lodash.debounce": "^4.0.8",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "watch": "^1.0.2"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ],
        "presets": [
          "stage-2"
        ]
      }
    }
  },
  "jest": {
    "verbose": true,
    "bail": true,
    "testRegex": ".*.test.js",
    "transformIgnorePatterns": []
  },
  "scripts": {
    "prebuild": "npm run test",
    "build": "node --harmony-async-await scripts/build.js",
    "build:demo": "node --harmony-async-await scripts/demo.js",
    "start": "node --harmony-async-await scripts/start.js",
    "test": "npm run test:lint && npm run test:flow && npm run test:jest",
    "test:lint": "eslint --color --ignore-path .gitignore \"./**/*.js\" --ignore-pattern demo",
    "test:flow": "flow check",
    "test:jest": "NODE_PATH=$NODE_PATH:./src node --harmony-async-await $(npm bin)/jest",
    "publish:demo": "git subtree push --prefix demo origin gh-pages",
    "prepublish": "npm run build"
  },
  "keywords": [
    "domain",
    "graphics",
    "hmmer",
    "pfam",
    "ebi",
    "embl"
  ],
  "license": "Apache-2.0"
}
